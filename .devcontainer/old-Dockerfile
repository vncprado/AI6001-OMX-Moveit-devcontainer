FROM osrf/ros:noetic-desktop-full-focal

ARG USERNAME=vscode
ARG USER_UID=1000
ARG USER_GID=$USER_UID

# Install ROS packages for the robot
RUN apt-get update && \
    apt-get install -y \
    ros-noetic-robotis-manipulator \
    ros-noetic-dynamixel-* \
    ros-noetic-open-manipulator-* \
    ros-noetic-moveit* \
    ros-noetic-joint-trajectory-controller

# Install Git
RUN apt-get update && apt-get install -y git \
    && rm -rf /var/lib/apt/lists/*
    
# Install X11 utilities
RUN apt-get update && apt-get install -y \
    x11-apps \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user
RUN groupadd --gid $USER_GID $USERNAME \
    && useradd --uid $USER_UID --gid $USER_GID -m --shell /bin/bash  $USERNAME

# Install sudo and add the user to the sudoers
RUN apt-get update && apt-get install -y sudo \
    && echo $USERNAME ALL=\(root\) NOPASSWD:ALL > /etc/sudoers.d/$USERNAME \
    && chmod 0440 /etc/sudoers.d/$USERNAME

# # Install Ping and Nano
RUN apt-get update && apt-get install -y iputils-ping nano \
    && rm -rf /var/lib/apt/lists/*

# Copy the hostname from /etc/hostname to HOSTNAME_VAR
# RUN export HOSTNAME_VAR=$(cat /etc/hostname) \
#     && echo "127.0.0.1 localhost" >> /etc/hosts \
#     && echo "127.0.1.1 $HOSTNAME_VAR" >> /etc/hosts

# Switch to the non-root user
USER $USERNAME

# Enable X11 forwarding
ENV DISPLAY=host.docker.internal:0

# Set the working directory
WORKDIR /workspaces

# Set ROS environment variables
ENV ROS_HOSTNAME=localhost
ENV ROS_MASTER_URI=http://localhost:11311

# Set up environment
RUN echo "source /opt/ros/noetic/setup.bash" >> ~/.bashrc

